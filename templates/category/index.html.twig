{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}
{% block css %}
<link href="{{asset('css/listanime.css')}}" rel="stylesheet">{% endblock %}

{% block body %}
<section id="service" class="services-mf route">
    <div class="container">
        <br/><br/><br/><br/><br/>
        <h1>Category index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.nom }}</td>
                    <td>
                        <a href="{{ path('app_category_show', {'id': category.id}) }}">show</a>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
                        {{ include('category/_delete_form.html.twig') }}
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_category_new') }}">Create new</a>
        <br/><br/><br/>

    </div>
</section>
{% endblock %}